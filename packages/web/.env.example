# Required
ANTHROPIC_API_KEY=your_anthropic_key_here

# Optional - for multi-provider support (future)
DEEPSEEK_API_KEY=your_deepseek_key_here
MISTRAL_API_KEY=your_mistral_key_here
XAI_API_KEY=your_xai_key_here

# Optional - for real-time data
COINGECKO_API_KEY=your_coingecko_key_here

# PostHog Analytics (EU Cloud)
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_api_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://eu.i.posthog.com

# Stripe Payments
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Stripe Price IDs (Subscriptions)
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID=price_pro_monthly_id_here
NEXT_PUBLIC_STRIPE_LEGEND_PRICE_ID=price_legend_monthly_id_here
NEXT_PUBLIC_STRIPE_TEAM_PRICE_ID=price_team_per_user_monthly_id_here

# Stripe Price IDs (Token Credits - One-time payments)
NEXT_PUBLIC_STRIPE_CREDITS_STARTER_ID=price_credits_starter_id_here
NEXT_PUBLIC_STRIPE_CREDITS_BUILDER_ID=price_credits_builder_id_here
NEXT_PUBLIC_STRIPE_CREDITS_SCALE_ID=price_credits_scale_id_here
NEXT_PUBLIC_STRIPE_CREDITS_BULK_ID=price_credits_bulk_id_here

# NOWPayments (Cryptocurrency Payments - Convenient Mode)
NOWPAYMENTS_API_KEY=your_nowpayments_api_key_here
NOWPAYMENTS_IPN_SECRET=your_nowpayments_ipn_secret_here
NOWPAYMENTS_SANDBOX=false # Set to true for testing
NEXT_PUBLIC_APP_URL=http://localhost:3000 # For IPN callbacks and redirects

# BTCPay Server (Cryptocurrency Payments - Sovereign Mode)
BTCPAY_SERVER_URL=http://localhost:14142 # Or https://btcpay.your-domain.com in production
BTCPAY_API_KEY=your_btcpay_api_key_here
BTCPAY_STORE_ID=your_btcpay_store_id_here
BTCPAY_WEBHOOK_SECRET=your_webhook_secret_here # Optional but recommended

# GitHub OAuth (for user authentication)
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_REDIRECT_URI=http://localhost:3000/api/auth/github/callback # Auto-configured

# Twitter/X OAuth 2.0 (for social connectors - thread & video analysis)
TWITTER_CLIENT_ID=your_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_client_secret_here
TWITTER_REDIRECT_URI=http://localhost:3000/api/auth/social/x/callback # Auto-configured
